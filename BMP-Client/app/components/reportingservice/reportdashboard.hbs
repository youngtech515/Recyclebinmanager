<div class="report-container">

  <!-- 🔍 Filters -->
  <section class="report-filters">
    <form id="reportFilterForm">
      <div class="filter-row">
        <div>
          <label>From:</label>
          <input type="date" name="fromDate" value="{{fromDate}}">
        </div>
        <div>
          <label>To:</label>
          <input type="date" name="toDate" value="{{toDate}}">
        </div>
        <div>
          <label>User:</label>
          <select name="user">
            <option value="">All</option>
            {{#each users}}
              <option value="{{this}}" {{#ifEquals ../selectedUser this}}selected{{/ifEquals}}>{{this}}</option>
            {{/each}}
          </select>
        </div>
        <div>
          <label>Action:</label>
          <select name="actionType">
            <option value="">All</option>
            <option value="Deleted" {{#ifEquals selectedAction "Deleted"}}selected{{/ifEquals}}>Deleted</option>
            <option value="Restored" {{#ifEquals selectedAction "Restored"}}selected{{/ifEquals}}>Restored</option>
            <option value="PermanentlyDeleted" {{#ifEquals selectedAction "PermanentlyDeleted"}}selected{{/ifEquals}}>Permanently Deleted</option>
          </select>
        </div>
        <div>
          <button type="submit" class="btn-primary">Apply</button>
          <button type="button" id="resetFilters" class="btn-secondary">Reset</button>
        </div>
      </div>
    </form>
  </section>

  <!-- 📊 Summary -->
  {{> summaryCards summary=summary }}

  <!-- 🔍 Search -->
  <div class="search-bar">
    <input id="searchInput" type="text" placeholder="Search reports..." />
  </div>

  <!-- 📋 Report Table -->
  {{> reportTable records=records }}

  <!-- 📥 Export -->
  <div class="export-buttons">
    <button id="exportCSV" class="btn-secondary">Export CSV</button>
    <button id="exportPDF" class="btn-secondary">Export PDF</button>
  </div>
</div>
